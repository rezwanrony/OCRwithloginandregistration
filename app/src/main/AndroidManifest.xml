<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.azer.ocrwithloginandregistration">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.ProfileActivity" />
        <activity android:name=".View.SignupActivity" />
        <activity android:name=".View.ResetPasswordActivity" />
        <activity android:name=".View.EditProfileActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".CropImageActivity" />
        <activity android:name=".TextscannerActivity"></activity>
    </application>

</manifest>